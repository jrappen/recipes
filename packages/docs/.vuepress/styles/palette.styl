/*
 * Local color variables using base16
 */

$base00 = #2d2d2d // ----
$base01 = #414141 // ---
$base02 = #545454 // --
$base03 = #686868 // -
$base04 = #b6b6b6 // +
$base05 = #cacaca // ++
$base06 = #dedede // +++
$base07 = #f1f1f1 // ++++
$base08 = #f2777a // redish
$base09 = #f99157 // orangish
$base0A = #ffcc66 // yellowish
$base0B = #99cc99 // greenish
$base0C = #66cccc // cyanish
$base0D = #6699cc // bluish
$base0E = #cc99cc // purplish
$base0F = #d27b53 // pinkish

/*
 * Variables for vuepress-theme-default-prefers-color-scheme
 */

$accentColor = $base0D
$accentDarkColor = $accentColor

$textColor = $base01
$textDarkColor = $base06

$borderColor = $base06
$borderDarkColor = $base01

$codeBgColor = $base02
$codeBgLightColor = $base05

$preTextColor = $base07
$preTextLightColor = $base00

$highlightedBgColor = rgba($base00, .66)
$highlightedBgLightColor = rgba($base07, 0.5)

$languageTextColor = rgba($base07, 0.4)
$languageTextLightColor = rgba($base00, 0.4)

$lineNumbersColor = rgba($base07, 0.3)
$lineNumbersLightColor = rgba($base00, 0.3)

$miniCodeBgColor = rgba($base00, 0.05)
$miniCodeBgDarkColor = rgba($base07, 0.1)

$bgColor = $base07
$bgDarkColor = $base00

$kbdBgColor = $base06
$kbdBgDarkColor = $base01

$blockquoteTextColor = $base03
$blockquoteTextDarkColor = $base04

$blockquoteBorderColor = $base05
$blockquoteBorderDarkColor = $base02

$tableBorderColor = $base06
$tableBorderDarkColor = $borderDarkColor

$tableStripeBgColor = $base06
$tableStripeBgDarkColor = $base01

$tipColor = $base0B
$tipDarkColor = $tipColor

$tipBgColor = rgba(lighten($base0B, 50%), 0.1)
$tipBgDarkColor = rgba(darken($base0B, 50%), 0.1)

$warningColor = $base0A
$warningDarkColor = $warningColor

$warningBgColor = rgba(lighten($base0A, 50%), 0.1)
$warningBgDarkColor = rgba(darken($base0A, 50%), 0.1)

$dangerColor = $base08
$dangerDarkColor = $dangerColor

$dangerBgColor = rgba(lighten($base08, 50%), 0.1)
$dangerBgDarkColor = rgba(darken($base08, 50%), 0.1)

$searchBorderColor = $base03
$searchBorderDarkColor = $base04
